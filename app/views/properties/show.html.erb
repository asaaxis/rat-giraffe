<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>
<% n = 0 %>
<% @nearest_stations.each do |nearest_stations| %>
  <% if @property.nearest_stations.any? %>
    <h2>
    最寄り駅<%= n += 1 %>
    </h2>

    <p>
      <strong>線路名:</strong>
      <%= nearest_stations.route_name %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= nearest_stations.station_name %>
    </p>

    <p>
      <strong>徒歩数分:</strong>
      <%= nearest_stations.walking_minutes %>分
    </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
